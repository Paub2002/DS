package DoorState {
    abstract DoorState {
    - door : Door
    - name : String
    + {abstract} open()
    + {abstract} close()
    + {abstract} lock()
    + {abstract} unlock()
    + {abstract} unlock_shortly()
    }
    class LockedDoor implements DoorState{
    + open()
    + close()
    + lock()
    + unlock()
    + unlock_shortly()
    }
    class ProppedDoor implements DoorState{
    + open()
    + close()
    + lock()
    + unlock()
    + unlock_shortly()
    }
    class UnlockedDoor implements DoorState{
    + open()
    + close()
    + lock()
    + unlock()
    + unlock_shortly()
    }
    class ShortlyUnlockedDoor implements DoorState{
    + open()
    + close()
    + lock()
    + unlock()
    + unlock_shortly()
    }
}
